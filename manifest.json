{
  "manifest_version": 3,
  "name": "KOSEN-OPAC-Checker",
  "version": "2.0",
  "description": "Amazon・楽天市場の書籍ページに図書館の蔵書情報を表示します",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://www.amazon.co.jp/*",
    "*://amazon.co.jp/*",
    "*://books.rakuten.co.jp/*",
    "*://libopac-c.kosen-k.go.jp/*",
    "*://m.media-amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.amazon.co.jp/*", "*://amazon.co.jp/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://books.rakuten.co.jp/*"],
      "js": ["content-rakuten.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "KOSEN-OPAC-Checker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "1024": "icons/icon1024.png"
  }
}
