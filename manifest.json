{
  "manifest_version": 3,
  "name": "図書館で見る",
  "version": "1.0",
  "description": "Amazonの書籍ページに図書館の蔵書情報を表示します",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://www.amazon.co.jp/*",
    "*://amazon.co.jp/*",
    "*://libopac-c.kosen-k.go.jp/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.co.jp/*",
        "*://amazon.co.jp/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "図書館で見る"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
